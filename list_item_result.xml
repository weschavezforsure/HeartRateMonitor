<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_result_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"        
        android:layout_alignParentLeft="true"
        android:padding="4dp"
        tools:text="Wednesday, Oct 10, 2016, 3:45 PM"/>

    <TextView
        android:id="@+id/list_item_result_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@+id/list_item_result_date_text_view"
        android:padding="4dp"
        tools:text="75 B.P.M."/>



</RelativeLayout>